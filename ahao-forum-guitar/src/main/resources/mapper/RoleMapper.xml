<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.ahao.forum.guitar.module.admin.role.dao.RoleMapper">

    <select id="getByUserId" resultType="DataSet">
        select
        <choose>
            <when test="fields != null and fields.length > 0">
                <foreach collection="fields" separator="," item="item">
                    r.${item}
                </foreach>
            </when>
            <otherwise>*</otherwise>
        </choose>
        from admin_role r
        left join admin_user__role ur on r.id = ur.role_id
        where ur.user_id = #{userId}
    </select>


    <select id="getSelectedByUserId" resultType="DataSet">
        SELECT
        <choose>
            <when test="fields != null and fields.length > 0">
                <foreach collection="fields" separator="," item="item">
                    r.${item}
                </foreach>
            </when>
            <otherwise>*</otherwise>
        </choose>
        , ur.id selected
        from admin_role r
        left join admin_user__role ur on ur.role_id = r.id
        where ur.user_id = #{userId} or ur.user_id is null
    </select>

</mapper>